<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/list_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_buton1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/nam_camera" />

            <ImageView
                android:id="@+id/img_buton2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/nam_camera2" />


            <ImageView
                android:id="@+id/img_buton3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/nam_home" />

            <ImageView
                android:id="@+id/img_buton4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/nam_dog2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
            <ImageView
                android:id="@+id/img_buton5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/nam_moto" />
            <ImageView
                android:id="@+id/img_buton6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/nam_person2" />
            <ImageView
                android:id="@+id/img_buton7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/nam_moto2" />
            <ImageView
                android:id="@+id/img_buton8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/nam_re" />
        </LinearLayout>


</LinearLayout>